@page
@model CheckBox.Pages.CheckModel
@{
    ViewData["Title"] = "Check";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div id="divContent" class="col-md-12">
    <div style="margin: 0 auto; max-width:700px;">
        <h2>Check</h2>

        <hr />




        <form>
            <h3>Pessoa</h3>

            <div class="form-group">
                <label for="txtNome">Nome</label>
                <input type="text" id="txtNome" class="form-control" name="nome"/>
            </div>

            <div class="form-group">
                <label for="dllClass">Example select</label>
                <select class="form-control" id="ddlCor" name="cor">
                    @foreach (String item in Model.Cor)
                    {
                        <option>@item</option>}
                </select>
            </div>

            <fieldset class="form-group">
                <legend>Cor</legend>
                @{foreach (String item in Model.Sexo)
                    {
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="sexo" id="optionsRadios" value="@item">
                                @item
                            </label>
                        </div>
                    }
                }
            </fieldset>

            <div class="form-check">
                @{foreach (KeyValuePair<String, String> item in Model.Escolhas)
                    {
                        <label class="form-check-label">
                            <input type="checkbox" class="form-check-input" name="@item.Key">
                            @item.Value
                        </label>
                    }
                }
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
    </div>
</div>